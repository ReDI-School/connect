{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.workingDirectories": [
    "./apps/redi-connect",
    "./lib/shared-atomic-design-components",
    "./libs/shared-types"
  ],
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.typegen.ts, ${capture}.graphql, ${capture}.generated.ts",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts, ${capture}.typegen.ts, ${capture}.graphql, ${capture}.generated.ts, ${capture}.scss, ${capture}.stories.tsx",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "*.graphql": "${capture}.generated.ts"
  }
}
